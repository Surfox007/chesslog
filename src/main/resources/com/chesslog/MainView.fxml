<SplitPane dividerPositions="0.65" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chesslog.MainController">
    <VBox fx:id="boardContainer" alignment="CENTER" minWidth="600" maxWidth="600" spacing="10" style="-fx-padding: 10;">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="blackPlayerIcon" style="-fx-font-size: 24px;"/>
            <Label fx:id="blackPlayerNameLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        </HBox>
        <!-- Chessboard will be inserted here dynamically -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="whitePlayerIcon" style="-fx-font-size: 24px;"/>
            <Label fx:id="whitePlayerNameLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        </HBox>
    </VBox>

    <VBox fx:id="controlPanel">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label text="ChessLog" styleClass="app-logo"/>

            <Region HBox.hgrow="ALWAYS"/> <Button fx:id="settingsButton">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <image>
                        <Image url="@../../images/settings_gear.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        </HBox>

        <TabPane fx:id="mainTabPane" side="TOP" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" style="-fx-padding: 0;">

            <Tab text="Analysis">
                <content>
                    <AnchorPane>
                        <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0">

                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Engine" style="-fx-font-weight: bold;"/>
                                <ToggleButton fx:id="stockfishToggle" styleClass="animated-toggle-button"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="Depth:" styleClass="analysis-label"/>
                                <Label fx:id="depthLabel" styleClass="evaluation-score"/>
                            </HBox>

                            <ListView fx:id="engineMovesListView" styleClass="engine-moves-list" prefHeight="40" maxHeight="40"/>

                            <ScrollPane fx:id="moveListScrollPane" styleClass="move-list-scroll-pane" fitToWidth="true" VBox.vgrow="ALWAYS">
                                <content>
                                    <TextFlow fx:id="moveListArea"/>
                                </content>
                            </ScrollPane>

                            <TitledPane text="Analysis Notes" expanded="false">
                                <content>
                                    <TextArea fx:id="gameNoteArea" promptText="Enter your notes here..." wrapText="true" prefHeight="100"/>
                                </content>
                            </TitledPane>

                            <HBox alignment="CENTER" spacing="15">
                                <Button fx:id="firstMoveButton" text="â‡¤" style="-fx-font-size: 18px;"/>
                                <Button fx:id="prevMoveButton" text="&lt;" style="-fx-font-size: 18px;"/>
                                <Button fx:id="nextMoveButton" text="&gt;" style="-fx-font-size: 18px;"/>
                                <Button fx:id="lastMoveButton" text="â‡¥" style="-fx-font-size: 18px;"/>
                                <ToggleButton fx:id="saveStarButton" text="â˜†" style="-fx-font-size: 18px;"/>
                                <Button fx:id="flipBoardButton" text="ðŸ”„" style="-fx-font-size: 18px;"/>
                                <Button text="âŸ²" style="-fx-font-size: 18px;"/>
                            </HBox>
                        </VBox>
                    </AnchorPane>
                </content>
            </Tab>

            <Tab text="Games">
                <content>
                    <AnchorPane>
                        <TabPane side="TOP" tabClosingPolicy="UNAVAILABLE" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0">

                            <Tab text="Your Collections">
                                <content>
                                    <VBox spacing="10" style="-fx-padding: 10;">

                                        <HBox alignment="CENTER_LEFT" spacing="5">
                                            <Button fx:id="addAnalysisButton" text="+" style="-fx-font-weight: bold;"/>
                                            <Label text="ðŸ”" style="-fx-font-size: 16px;"/>
                                            <TextField fx:id="collectionSearchField" promptText="Search your saved games..." HBox.hgrow="ALWAYS"/>
                                        </HBox>

                                        <TableView fx:id="savedGamesTable" VBox.vgrow="ALWAYS">
                                            <placeholder>
                                                <Label text="No saved analyses found."/>
                                            </placeholder>
                                        </TableView>

                                    </VBox>
                                </content>
                            </Tab>

                            <Tab text="Import">
                                <content>
                                    <VBox spacing="10" style="-fx-padding: 10;">
                                        <Label text="Import Games from Chess.com User" style="-fx-font-weight: bold;"/>

                                        <HBox spacing="5" alignment="CENTER_LEFT">
                                            <TextField fx:id="usernameField" promptText="Enter Chess.com Username" HBox.hgrow="ALWAYS"/>
                                            <Button fx:id="importButton" text="Fetch Games"/>
                                        </HBox>

                                        <TableView fx:id="importedGamesTable" VBox.vgrow="ALWAYS">
                                            <placeholder>
                                                <Label text="Enter a username and click 'Fetch Games'."/>
                                            </placeholder>
                                        </TableView>

                                    </VBox>
                                </content>
                            </Tab>
                        </TabPane>
                    </AnchorPane>
                </content>
            </Tab>
        </TabPane>
    </VBox>
</SplitPane>